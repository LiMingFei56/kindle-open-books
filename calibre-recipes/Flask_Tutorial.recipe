import re
from calibre.web.feeds.recipes import BasicNewsRecipe

class Flask_Tutorial(BasicNewsRecipe):

    title = "Flask Tutorial"
    description = "Welcome to Flaskâ€™s documentation. Get started with Installation and then get an overview with the Quickstart. There is also a more detailed Tutorial that shows how to create a small but complete application with Flask. Common patterns are described in the Patterns for Flask section. The rest of the docs describe each component of Flask in detail, with a full reference in the API section."

    url_prefix = 'https://flask.palletsprojects.com/en/2.2.x/'
    no_stylesheets = True
    max_articles_per_feed = 500
    keep_only_tags = [{ 'class': 'body' }]

    def parse_index(self):
        soup = self.index_to_soup('https://flask.palletsprojects.com/en/2.2.x/')

        nav = soup.find('div', {'class': 'toctree-wrapper'}) 

        articles = []
        for link in nav.find_all("a"):
            pattern = re.compile(r'^.*/$')
            if not pattern.match(link['href']):
               continue
            
            art_title = link.string
            if art_title is None:
                art_title = ""
                art_title = art_title.join(link.strings)
                art_title = art_title.replace("\xa0", " ")

            if link.get("href") is None:
                continue
            url = self.url_prefix + link['href']
            a = { 'title': art_title, 'url': url }

            articles.append(a)

        ans = [(self.title, articles)]
        return ans
