import re
from calibre.web.feeds.recipes import BasicNewsRecipe

class The_Python_Tutorial(BasicNewsRecipe):

    title = "The Python Tutorial"
    description = "Python is an easy to learn, powerful programming language. It has efficient high-level data structures and a simple but effective approach to object-oriented programming. Pythonâ€™s elegant syntax and dynamic typing, together with its interpreted nature, make it an ideal language for scripting and rapid application development in many areas on most platforms."

    url_prefix = 'https://docs.python.org/3/tutorial/'
    no_stylesheets = True
    max_articles_per_feed = 500
    keep_only_tags = [{ 'class': 'body' }]

    def parse_index(self):
        soup = self.index_to_soup('https://docs.python.org/3/tutorial/index.html')

        nav = soup.find('div', {'class': 'toctree-wrapper'}) 

        articles = []
        for link in nav.find_all("a"):
            pattern = re.compile(r'^.*\.html$')
            if not pattern.match(link['href']):
               continue
            
            art_title = link.string
            if art_title is None:
                art_title = ""
                art_title = art_title.join(link.strings)
                art_title = art_title.replace("\xa0", " ")

            if link.get("href") is None:
                continue
            url = self.url_prefix + link['href']
            a = { 'title': art_title, 'url': url }

            articles.append(a)

        ans = [(self.title, articles)]
        return ans
